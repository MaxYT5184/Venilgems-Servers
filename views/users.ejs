<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - Venilgem Services Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }
        .role-badge {
            font-size: 0.75rem;
            margin-right: 3px;
            margin-bottom: 3px;
        }
        .role-badge.moderator {
            background-color: #ff9800 !important;
        }
        .role-badge.admin {
            background-color: #f44336 !important;
        }
        .role-badge.member {
            background-color: #4caf50 !important;
        }
        .timeout-badge {
            background-color: #ffc107;
        }
        .bot-badge {
            background-color: #6c757d;
        }
        .action-btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }
        .table-actions {
            min-width: 200px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="bi bi-robot"></i> Venilgem Services Dashboard
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/users">
                            <i class="bi bi-people"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/settings">
                            <i class="bi bi-gear"></i> Settings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logs">
                            <i class="bi bi-journal-text"></i> Logs
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <h1><i class="bi bi-people"></i> User Management</h1>
                <p>Manage users in your Discord server</p>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
                
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-list"></i> Users List</span>
                        <div>
                            <button class="btn btn-sm btn-outline-primary me-2" id="refresh-users">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="bi bi-funnel"></i> Filter
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#" data-filter="all">All Users</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="human">Humans Only</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="bot">Bots Only</a></li>
                                    <li><a class="dropdown-item" href="#" data-filter="timeout">Timeout Only</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="usersTable" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Roles</th>
                                        <th>Joined</th>
                                        <th>Status</th>
                                        <th class="table-actions">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeof users !== 'undefined' && users.length > 0) { %>
                                        <% users.forEach(user => { %>
                                            <tr data-user-id="<%= user.id %>" data-is-bot="<%= user.isBot %>" data-is-timeout="<%= user.isTimeout %>" class="<%= user.isBot ? 'table-secondary' : '' %>">
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="<%= user.avatar %>" alt="<%= user.username %>" class="user-avatar me-2">
                                                        <div>
                                                            <strong><%= user.username %><% if (user.discriminator !== '0') { %>#<%= user.discriminator %><% } %></strong>
                                                            <div class="small text-muted"><%= user.id %></div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (user.roles && user.roles.length > 0) { %>
                                                        <% user.roles.slice(0, 3).forEach(role => { %>
                                                            <%
                                                                let roleClass = 'bg-secondary';
                                                                if (role.name.toLowerCase().includes('admin')) {
                                                                    roleClass = 'admin';
                                                                } else if (role.name.toLowerCase().includes('mod')) {
                                                                    roleClass = 'moderator';
                                                                } else if (role.name.toLowerCase().includes('member')) {
                                                                    roleClass = 'member';
                                                                }
                                                            %>
                                                            <span class="badge role-badge <%= roleClass %>"><%= role.name %></span>
                                                        <% }); %>
                                                        <% if (user.roles.length > 3) { %>
                                                            <span class="badge bg-secondary">+<%= user.roles.length - 3 %> more</span>
                                                        <% } %>
                                                    <% } else { %>
                                                        <span class="text-muted">No roles</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (user.joinedAt) { %>
                                                        <%= new Date(user.joinedAt).toLocaleDateString() %>
                                                    <% } else { %>
                                                        <span class="text-muted">Unknown</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (user.isBot) { %>
                                                        <span class="badge bot-badge">BOT</span>
                                                    <% } else if (user.isTimeout) { %>
                                                        <span class="badge timeout-badge">TIMEOUT</span>
                                                        <div class="small text-muted">
                                                            Until: <%= user.timeoutUntil ? new Date(user.timeoutUntil).toLocaleString() : 'Unknown' %>
                                                        </div>
                                                    <% } else { %>
                                                        <span class="badge bg-success">ACTIVE</span>
                                                    <% } %>
                                                </td>
                                                <td class="table-actions">
                                                    <% if (!user.isBot) { %>
                                                        <button class="btn btn-sm btn-outline-warning action-btn" data-action="warn" data-user-id="<%= user.id %>">
                                                            <i class="bi bi-exclamation-triangle"></i> Warn
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger action-btn" data-action="timeout" data-user-id="<%= user.id %>">
                                                            <i class="bi bi-clock"></i> Timeout
                                                        </button>
                                                        <% if (user.isTimeout) { %>
                                                            <button class="btn btn-sm btn-outline-success action-btn" data-action="untimeout" data-user-id="<%= user.id %>">
                                                                <i class="bi bi-unlock"></i> Untimeout
                                                            </button>
                                                        <% } %>
                                                        <button class="btn btn-sm btn-outline-danger action-btn" data-action="kick" data-user-id="<%= user.id %>">
                                                            <i class="bi bi-person-x"></i> Kick
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger action-btn" data-action="ban" data-user-id="<%= user.id %>">
                                                            <i class="bi bi-person-fill-x"></i> Ban
                                                        </button>
                                                    <% } else { %>
                                                        <span class="text-muted">Bot actions disabled</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">No users found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Modal -->
    <div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="actionModalLabel">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="actionForm">
                        <input type="hidden" id="userId" name="userId">
                        <input type="hidden" id="action" name="action">
                        <div class="mb-3">
                            <label for="reason" class="form-label">Reason</label>
                            <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
                        </div>
                        <div class="mb-3" id="durationField" style="display: none;">
                            <label for="duration" class="form-label">Duration (minutes)</label>
                            <input type="number" class="form-control" id="duration" name="duration" min="1" max="40320" value="60">
                            <div class="form-text">Enter duration in minutes (max 40320 for 28 days)</div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmAction">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Warning Modal -->
    <div class="modal fade" id="warnModal" tabindex="-1" aria-labelledby="warnModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="warnModalLabel">Warn User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="warnForm">
                        <input type="hidden" id="warnUserId" name="userId">
                        <div class="mb-3">
                            <label for="warnReason" class="form-label">Warning Reason</label>
                            <textarea class="form-control" id="warnReason" name="reason" rows="3" required></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-warning" id="confirmWarn">Warn</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        // Initialize DataTable
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "pageLength": 25,
                "order": [[ 2, "desc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": [1, 4] }
                ]
            });
            
            // Refresh users
            $('#refresh-users').click(function() {
                location.reload();
            });
            
            // Filter users
            $('.dropdown-item').click(function(e) {
                e.preventDefault();
                const filter = $(this).data('filter');
                
                $('#usersTable tbody tr').each(function() {
                    const isBot = $(this).data('is-bot');
                    const isTimeout = $(this).data('is-timeout');
                    
                    switch(filter) {
                        case 'all':
                            $(this).show();
                            break;
                        case 'human':
                            $(this).toggle(!isBot);
                            break;
                        case 'bot':
                            $(this).toggle(isBot);
                            break;
                        case 'timeout':
                            $(this).toggle(isTimeout);
                            break;
                    }
                });
            });
            
            // Action buttons
            $('.action-btn').click(function() {
                const action = $(this).data('action');
                const userId = $(this).data('user-id');
                
                if (action === 'warn') {
                    $('#warnUserId').val(userId);
                    $('#warnModal').modal('show');
                } else {
                    $('#userId').val(userId);
                    $('#action').val(action);
                    $('#actionModalLabel').text(action.charAt(0).toUpperCase() + action.slice(1) + ' User');
                    
                    // Show/hide duration field based on action
                    if (action === 'timeout') {
                        $('#durationField').show();
                    } else {
                        $('#durationField').hide();
                    }
                    
                    $('#actionModal').modal('show');
                }
            });
            
            // Confirm action
            $('#confirmAction').click(function() {
                const userId = $('#userId').val();
                const action = $('#action').val();
                const reason = $('#reason').val();
                const duration = $('#duration').val();
                
                if (!reason) {
                    alert('Please provide a reason');
                    return;
                }
                
                if (action === 'timeout' && !duration) {
                    alert('Please provide a duration');
                    return;
                }
                
                // Send request
                $.post(`/users/${userId}/${action}`, {
                    reason: reason,
                    duration: duration
                })
                .done(function(data) {
                    if (data.success) {
                        alert(`${action.charAt(0).toUpperCase() + action.slice(1)} action completed successfully`);
                        $('#actionModal').modal('hide');
                        location.reload();
                    } else {
                        alert(`Error: ${data.error}`);
                    }
                })
                .fail(function() {
                    alert('Error performing action');
                });
            });
            
            // Confirm warn
            $('#confirmWarn').click(function() {
                const userId = $('#warnUserId').val();
                const reason = $('#warnReason').val();
                
                if (!reason) {
                    alert('Please provide a warning reason');
                    return;
                }
                
                // Send request
                $.post(`/users/${userId}/warn`, {
                    reason: reason
                })
                .done(function(data) {
                    if (data.success) {
                        alert('User warned successfully');
                        $('#warnModal').modal('hide');
                        location.reload();
                    } else {
                        alert(`Error: ${data.error}`);
                    }
                })
                .fail(function() {
                    alert('Error warning user');
                });
            });
        });
    </script>
</body>
</html>
